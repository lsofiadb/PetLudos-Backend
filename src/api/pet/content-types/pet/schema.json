{
  "kind": "collectionType",
  "collectionName": "pets",
  "info": {
    "singularName": "pet",
    "pluralName": "pets",
    "displayName": "Pet",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "age": {
      "type": "string",
      "required": true
    },
    "breed": {
      "type": "string",
      "required": true
    },
    "size": {
      "type": "decimal",
      "required": true
    },
    "genre": {
      "type": "enumeration",
      "enum": [
        "male",
        "female"
      ],
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "specie": {
      "type": "string",
      "required": true
    },
    "weight": {
      "type": "decimal",
      "required": true
    },
    "medical_history": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::medical-history.medical-history"
    },
    "personality": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::personality.personality"
    },
    "adoption_process": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::adoption-process.adoption-process",
      "inversedBy": "pets"
